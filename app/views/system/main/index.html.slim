            . #{mi(:settings_system_daydream)} AWS

        li.nav-item = link_to("https://us8.admin.mailchimp.com/", class: "nav-link", target: :_blank, rel: :noopener) do
          . #{mi(:send)} Mailchimp

        li.nav-item
          = link_to("/system/letter_opener/", class: "nav-link", target: :_blank, rel: :noopener) do
            . #{mi(:move_to_inbox)} letter opener

    h2 全機連マシンライフ

    nav.nav.flex-column
      = link_to "/", class: "nav-link" do
        . #{mi(:home)} マシンライフ トップページ
      = link_to "/admin", class: "nav-link" do
        . #{mi(:business)} 会員ページ (#{current_company.company_remove_kabu})
      = link_to "/admin/logout", data: { turbo_method: :delete, turbo_confirm: "ログアウトしますか？" }, class: "nav-link" do
        . #{mi(:logout)} ログアウト
